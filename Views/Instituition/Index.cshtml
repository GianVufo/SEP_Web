@model ICollection<Instituition>
@using SEP_Web.Models
@{
    ViewData["Title"] = "Órgãos";
}

<div>

    <div class="p-3">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" data-dismiss="modal" aria-label="Close">
                    <span class="close-span" aria-hidden="true">&times;</span>
                </button>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" data-dismiss="modal" aria-label="Close">
                    <span class="close-span" aria-hidden="true">&times;</span>
                </button>
                @TempData["ErrorMessage"]
            </div>
        }
    </div>

    <div class="d-flex justify-content-start w-100">
        <button title="Cadastrar Órgão" style="width: 18vh;" type="button" data-bs-toggle="modal" data-bs-target="#instituition-register"
            class="btn btn-primary d-flex justify-content-evenly btn-adm-register btn-md mb-3"><i class="bi bi-person-plus-fill"></i> Novo</button>
    </div>

    <div class="table-responsive-md">

        <table id="instituition-table" class="table table-bordered table-striped table-style table-light p-0">

            <thead class="table-dark">
                <tr>
                    <th scope="col">Descrição</th>
                    <th scope="col"></th>
                </tr>
            </thead>

            <tbody>

                @foreach (Instituition u in Model)
                {
                    <tr>
                        <td scope="row">@u.Name</td>
                        <td scope="row">
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <button type="button" data-bs-toggle="modal" data-bs-target="#instituition-edit-@u.Id" class="btn btn-sm btn-outline-primary">Editar</button>

                                <button type="button" data-bs-toggle="modal" asp-route-id="@u.Id" data-bs-target="#instituition-@u.Id" class="btn btn-sm btn-outline-danger">Apagar</button>
                            </div>
                        </td>
                    </tr>

                    @* Start Register Modal *@

                    <div class="modal fade" id="instituition-register" tabindex="-1" role="dialog"
                        aria-labelledby="instituition-registerTitle" aria-hidden="true">

                        <div class="modal-dialog modal-dialog-centered" role="document">

                            <div class="modal-content">

                                <div class="modal-header p-3">

                                    <h3 class="modal-title text-center mb-0 p-0" id="instituition-registerTitle">Adicionar Órgão
                                    </h3>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                    </button>

                                </div>

                                <div class="modal-body p-1">
                                    @await Html.PartialAsync("_Register.cshtml", @u)
                                </div>

                            </div>

                        </div>

                    </div>

                    @* Finish Register Modal *@

                    @* Start Edit Modal *@

                    <div class="modal fade" id="instituition-edit-@u.Id" tabindex="-1" role="dialog"
                        aria-labelledby="instituition-editTitle" aria-hidden="true">

                        <div class="modal-dialog modal-dialog-centered" role="document">

                            <div class="modal-content">

                                <div class="modal-header p-3">

                                    <h3 class="modal-title text-center mb-0 p-0" id="instituition-editTitle">Editar Órgão
                                    </h3>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                    </button>

                                </div>

                                <div class="modal-body p-1">
                                    @await Html.PartialAsync("_Edit.cshtml", @u)
                                </div>

                            </div>

                        </div>

                    </div>

                    @* Finish Edit Modal *@

                    @* Start Delete Modal *@

                    <div class="modal fade" id="instituition-@u.Id" tabindex="-1" role="dialog"
                        aria-labelledby="instituitionTitle" aria-hidden="true">

                        <div class="modal-dialog modal-dialog-centered" role="document">

                            <div class="modal-content">

                                <div class="modal-header p-3">

                                    <h3 class="modal-title text-danger text-center mb-0 p-0" id="instituitionTitle">Alerta!
                                    </h3>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
                                    </button>

                                </div>

                                <div class="modal-body p-1">
                                    @await Html.PartialAsync("_Delete.cshtml", @u)
                                </div>

                            </div>

                        </div>

                    </div>

                    @* Finish Delete Modal *@

                }

            </tbody>

        </table>

    </div>

</div>
