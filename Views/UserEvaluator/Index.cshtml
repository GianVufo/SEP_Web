@model ICollection<UserEvaluator>
@using SEP_Web.Models
@{
    ViewData["Title"] = "Avaliadores cadastrados";
}

<div>
    <div class="p-3">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" data-dismiss="modal" aria-label="Close">
                    <span class="close-span" aria-hidden="true">&times;</span>
                </button>
                @TempData["SuccessMessage"]
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger" role="alert">
                <button type="button" class="btn btn-danger btn-sm close-alert" data-dismiss="modal" aria-label="Close">
                    <span class="close-span" aria-hidden="true">&times;</span>
                </button>
                @TempData["ErrorMessage"]
            </div>
        }
    </div>

    <div class="d-flex justify-content-start w-100">
        <a title="Cadastrar avaliador" style="width: 18vh;" role="button" asp-controller="UserEvaluator"
            asp-action="Register" class="btn btn-primary btn-adm-register d-flex justify-content-evenly btn-md mb-3"><i
                class="bi bi-person-plus-fill"></i> Novo</a>
    </div>

    <div class="card">

        <div class="table-responsive-md">

            <div class="card-header bg-primary text-light">
                <span class="fw-bold">Avaliadores :</span>
            </div>

            <div class="card-body">

                <table id="evaluator-table" class="table table-sm table-bordered table-striped table-light table-style p-0">

                    <thead class="table-light bg-danger border-light text-primary">
                        <tr>
                            <th scope="col">MASP</th>
                            <th scope="col">Nome</th>
                            <th scope="col">Login</th>
                            <th scope="col">E-mail</th>
                            <th scope="col">Telefone</th>
                            <th scope="col"></th>
                        </tr>
                    </thead>

                    <tbody>

                        @foreach (UserEvaluator u in Model)
                        {
                            <tr class="table-light border-light">
                                <td scope="row">@u.Masp</td>
                                <td scope="row">@u.Name</td>
                                <td scope="row">@u.Login</td>
                                <td scope="row">@u.Email</td>
                                <td scope="row">@u.Phone</td>
                                <td scope="row">
                                    <div class="btn-group" role="group" aria-label="Basic example">
                                        <a role="button" asp-route-id="@u.Id" asp-controller="UserEvaluator"
                                            asp-action="Edit" class="btn btn-sm btn-outline-primary">Editar</a>

                                        <button type="button" data-bs-toggle="modal" asp-route-id="@u.Id"
                                            data-bs-target="#deleteEvaluator-@u.Id"
                                            class="btn btn-sm btn-outline-danger">Apagar</button>
                                    </div>
                                </td>
                            </tr>

                            @* Start Delete Modal *@

                            <div class="modal fade" id="deleteEvaluator-@u.Id" tabindex="-1" role="dialog"
                                aria-labelledby="deleteUserTitle" aria-hidden="true">

                                <div class="modal-dialog modal-dialog-centered" role="document">

                                    <div class="modal-content">

                                        <div class="modal-header p-3">

                                            <h3 class="modal-title text-danger text-center mb-0 p-0" id="deleteTitle">
                                                Alerta!</h3>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal"
                                                aria-label="Close">
                                            </button>

                                        </div>

                                        <div class="modal-body p-1">
                                            @await Html.PartialAsync("_Delete.cshtml", @u)
                                        </div>

                                    </div>

                                </div>

                            </div>

                            @* Finish Delete Modal *@
                        }

                    </tbody>

                </table>

            </div>

        </div>

    </div>
</div>
