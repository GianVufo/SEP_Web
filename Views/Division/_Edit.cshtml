@model Division
@using SEP_Web.Models
@{
    ViewData["Title"] = "Edição de divisão";
}

<div>

    <form asp-controller="Division" asp-action="Edit" method="post">

        <input id="edit-division-id" type="hidden" asp-for="Id">

        <div class="form-group p-3">
            <input type="text" class="form-control" maxlength="60" minlength="8" id="edit-division-name" name="Name" asp-for="Name" required />
        </div>

        <div class="modal-footer p-2">
            <button type="submit" class="btn btn-primary btn-md">Salvar</button>
            <a asp-controller="Division" asp-action="Index" class="btn btn-outline-secondary btn-md" title="Cancelar">Cancelar</a>
        </div>

    </form>

</div>