@model UserAdministrator
@using SEP_Web.Models

@{
    ViewData["Title"] = "Excluir Usuário";
}

<!-- Partial View de Exclusão de Usuário -->

<div>

    <form asp-controller="UserAdministrator" asp-action="Delete" method="post">

        <input type="hidden" asp-for="Id">

        <div class="p-2 text-justify">
            <span>Tem certeza que deseja excluir o usuário <b>@Model.Name</b>? Essa ação excluirá a conta de forma
                <b class="text-danger">permanente</b> e não poderá ser desfeita.</span>
        </div>

        <div class="modal-footer p-2">

            <button type="submit" class="btn btn-danger btn-md" name="decision" type="submit" value="delete"
                title="Excluir - @Model.Login">Excluir</button>

            <a asp-controller="UserAdministrator" asp-action="Index" class="btn btn-secondary btn-md"
                title="Cancelar"><i class="bi bi-arrow-return-left" title="Cancelar"></i></a>

        </div>

    </form>

</div>

<!-- / Partial View de Exclusão de Usuário -->